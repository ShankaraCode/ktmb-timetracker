{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": [
      "./globals.d.ts"
    ],
    "resolveJsonModule": true, // Enable importing JSON files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": [
    "./src/**/*",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}